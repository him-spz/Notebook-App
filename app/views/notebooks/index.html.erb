<p style="color: green"><%= notice %></p>
<% content_for :title, "Notebooks" %>
<h1>Notebooks</h1>

<% if @notebooks.any? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Status</th>
        <th>Percent Complete</th>
        <th>Chapters Read</th>
      </tr>
    </thead>
    <tbody>
      <% @notebooks.each do |notebook| %>
        <%= render notebook %>
        <tr>
          <td colspan="5">
            <%= link_to "Show this notebook", notebook %>
            <%= button_to "Destroy this notebook", notebook, method: :delete, data: { confirm: "Are you sure you want to delete this notebook?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="no-notebooks">There are no notebooks till now. Create one using the button below.</p>
<% end %>

<%= link_to "New notebook", new_notebook_path %>